@model GetAppUserByProductID


<div class="sidebar-side col-lg-4 col-md-12 col-sm-12 mt-lg-0 mt-5">
    <aside class="sidebar">

        <!-- Popular Post Widget-->
        <div class="sidebar-widget popular-posts">
            <div class="sidebar-title">
                <h4>İletişim Bilgileri</h4>
            </div>

            <article class="post">
                <figure class="post-thumb">
                    <img src="@Model.UserImageUrl" style="height:100px; width:100px;" class="radius-image" alt="">
                </figure>
                <div class="text mb-0">
                    <a href="#blog-single">
                        @Model.Name
                    </a>
                    <div class="post-info">@Model.PhoneNumber</div>
                    <div class="post-info">@Model.Email</div>
                </div>
            </article>
            <button type="submit" class="btn btn-outline-primary btn-style mt-4"><a href="@Url.Action("AppUserProfile", "HomeAppUser", new { UserProfileID = Model.UserID })">Detaylı İletişim Bilgileri</a></button>
        </div>
    </aside>
</div>
