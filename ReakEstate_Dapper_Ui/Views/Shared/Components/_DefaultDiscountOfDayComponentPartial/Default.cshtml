@model List<ResultProductDto>

<div class="w3l-news" id="news">
    <section id="grids5-block" class="py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <h3 class="title-big text-center">En Son Eklenenler</h3>
            <div class="row mt-lg-5 mt-4 pt-3">

                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mt-md-0 mt-sm-4">
                        <div class="grids5-info">
                            <span class="posted-date">
                                <a href="@Url.Action("PropertySingle","Property",new {slug = item.slugUrl, id = item.productID})">
                                    <span class="small">@item.advertisementDate.ToString("yyyy")</span>
                                    <span class="big">@item.advertisementDate.ToString("dd")</span>
                                    <span class="small">@item.advertisementDate.ToString("MMM")</span>
                                </a>
                            </span>
                            <a href="@Url.Action("PropertySingle","Property",new {slug = item.slugUrl, id = item.productID})" class="d-block zoom">
                                <img src="@item.coverimage" style="height:250px;" alt=""
                                     class="img-fluid news-image" />
                            </a>
                            <div class="blog-info">
                                <a href="#">@item.categoryName</a>
                                <h4><a href="@Url.Action("PropertySingle","Property",new {slug = item.slugUrl, id = item.productID})">@item.title</a></h4>
                                <p>@item.description</p>
                            </div>
                        </div>
                    </div>
                }
                
            </div>
        </div>
    </section>
</div>