@model List<GetProductByProductIdDto>

<div class="sidebar-widget popular-posts">

    <div class="sidebar-title">
        <h4>Emlakçıya Ait Diğer İlanlar</h4>
    </div>

    @foreach(var item in Model.Take(4))
    {
        <article class="post">
            <figure class="post-thumb">
                <img src="@item.CoverImage" class="radius-image" alt="">
            </figure>
            <div class="text">
                <a href="@Url.Action("PropertySingle","Property",new {slug = item.SlugUrl, id = item.ProductID})">@item.Title</a>
                <div class="post-info">@item.AdvertisementDate.ToString("dd-MMM-yyyy")</div>
            </div>
        </article>
    }

