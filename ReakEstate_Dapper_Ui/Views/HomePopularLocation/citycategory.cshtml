@model List<ResultProductDto>
@{
    ViewData["Title"] = "citycategory";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}


<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about pt-5">
        <div class="container pt-lg-5 py-3">
        </div>
    </div>
</section>
<section class="w3l-breadcrumb">
    <div class="container">
        <ul class="breadcrumbs-custom-path">
            <li><a href="/Default/Index">Anasayfa</a></li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span><a href="/HomePopularLocation/Index"> Lokasyonlar</a></li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlanlar</li>
        </ul>
    </div>
</section>
<section class="locations-1" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="heading text-center mx-auto">
                <h6 class="title-small">İlanlar</h6>
                <h3 class="title-big">Tüm İlanlar (@Model.Count)</h3>
            </div>
            <div class="row pt-md-5 pt-4">

                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 listing-img">
                        <a href="@Url.Action("PropertySingle","Property",new {slug = item.slugUrl, id = item.productID})">
                            <div class="box16">
                                <div class="rentext-listing-category"><span>@item.type</span><span>@item.categoryName</span></div>
                                <img class="img-fluid" src="@item.coverimage" alt="">
                                <div class="box-content">
                                    <h3 class="title">₺@item.price</h3>
                                </div>
                            </div>
                        </a>
                        <div class="listing-details blog-details align-self">
                            <h4 class="user_title agent">
                                <a href="@Url.Action("PropertySingle","Property",new {slug = item.slugUrl, id = item.productID})">@item.title</a>
                            </h4>
                            <span class="post">@item.address - @item.district / @item.city</span>
                        </div>
                    </div>
                }

            </div>
            <!-- pagination -->
            <div class="pagination-wrapper mt-5 pt-lg-3 text-center">
                <ul class="page-pagination">
                    <li><span aria-current="page" class="page-numbers current">1</span></li>
                    <li><a class="page-numbers" href="#url">2</a></li>
                    <li><a class="page-numbers" href="#url">3</a></li>
                    <li><a class="next" href="#url">İleri <span class="fa fa-angle-right"></span></a></li>
                </ul>
            </div>
        </div>
    </div>
</section>