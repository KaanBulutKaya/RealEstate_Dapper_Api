@model List<ResultPopularLocationDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about pt-5">
        <div class="container pt-lg-5 py-3">
        </div>
    </div>
</section>
<section class="w3l-breadcrumb">
    <div class="container">
        <ul class="breadcrumbs-custom-path">
            <li><a href="/Default/Index">Anasayfa</a></li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> Lokasyonlar</li>
        </ul>
    </div>
</section>
<section class="locations-1 popular" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4">
            <div class="heading text-center mx-auto">
                <h6 class="title-small">Şehirleri Keşfet</h6>
                <h3 class="title-big">Tüm Lokasyonlar(@Model.Count)</h3>
            </div>
            <div class="row pt-5">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-4 col-6 mb-3">
                        <a href="@Url.Action("citycategory", "HomePopularLocation", new { CityNameI = item.CityName })">
                            <div class="box16">
                                <img class="img-fluid" style="height:180px;width:400px;" src="@item.ImageUrl" alt="">
                                <div class="box-content">
                                    <h3 class="title mb-1">@item.CityName</h3>
                                    <span class="post">@item.PropertyCount İlan</span>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
