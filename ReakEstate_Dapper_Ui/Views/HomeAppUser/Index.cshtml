@model List<ReakEstate_Dapper_Ui.Dtos.AppUserDtos.ResultAppUserProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about pt-5">
        <div class="container pt-lg-5 py-3">
        </div>
    </div>
</section>
<section class="w3l-breadcrumb">
    <div class="container">
        <ul class="breadcrumbs-custom-path">
            <li><a href="/Default/Index">Anasayfa</a></li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> Kullanıcılar</li>
        </ul>
    </div>
</section>
<section class="locations-1 popular" id="locations">
    <div class="w3l-agentsblock py-5" id="team">
        <div class="container py-lg-5 py-md-4 py-2">
            <h6 class="title-small text-center">Ekibimiz</h6>
            <h3 class="title-big text-center mb-lg-5 mb-4">Kullanıcılar</h3>
            <!-- blok -->
            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-sm-6 column-item" style="margin-bottom: 100px;">
                        <div class="users_box" style="max-width: 300px; max-height: 400px;">
                            <div class="user-avatar" style="height: 200px;">
                                <a href="@Url.Action("AppUserProfile", "HomeAppUser", new { UserProfileID = item.UserID })" class="avatar">
                                    <img src="@item.UserImageUrl" alt="" class="img-fluid w-100 radius-image" style="height: 100%; object-fit: cover;">
                                </a>
                            </div>
                            <div class="users_box_info">
                                <p class="user_position">AAA</p>
                                <h4 class="user_title agent">
                                    <a href="@Url.Action("AppUserProfile", "HomeAppUser", new { UserProfileID = item.UserID })">@item.Name</a>
                                </h4>
                                <div class="user_meta user_phone">
                                    <span class="phone-detail"> <a href="tel:@item.PhoneNumber">@item.PhoneNumber &</a></span>
                                    <span class="phone-detail">@item.Email</span>
                                </div>
                                <a href="mailto:@item.Email" class="btn btn-outline-primary btn-style mt-4">
                                    E-posta Gönder
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>


